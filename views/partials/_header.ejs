<header>
  <nav class="navbar navbar-expand-md navbar-dark nav-bg">
    <a class="navbar-brand mr-auto" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <% if (username) { %>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link ml-3" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <form class="form-inline" action="/urls/logout" method="POST">
      <div class="form-group my-2">
        <p class="logged-in my-auto mr-4"><%= email %></p>
        <button type="submit" class="btn mr-2 button-light">Logout</button>
      </div>
    </form>
    <% } else { %>
    <form class="form-inline" action="/urls/register" method="GET">
      <div class="form-group ml-2">
        <button type="submit" class="btn my-2 mr-2 button-light">Register</button>
      </div>
    </form>
    <% } %>
  </nav>
</header>