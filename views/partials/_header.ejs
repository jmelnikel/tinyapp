<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>

    <% if (username) { %>
    <form class="form-inline" action="/logout" method="POST">
      <div class="form-group mb-2">
        <h3 class="mr-2 pt-2">Logged in as: <%= username %></h3>
        <button type="submit" class="btn btn-primary">Logout</button>
      </div>
    </form>
    <% } else { %>
    <form class="form-inline" action="/login" method="POST">
      <div class="form-group mb-2">
        <label for="username">Email:</label>
        <input id="username" class="form-control" type="text" name="email" placeholder="Enter email to login"
          style="width: 300px; margin: 1em">
        <button type="submit" class="btn btn-primary">Login</button>
      </div>
    </form>
    <form class="form-inline" action="/register" method="GET">
      <div class="form-group mb-2 ml-2">
        <button type="submit" class="btn btn-primary">Sign Up</button>
      </div>
    </form>
    <% } %>
  </nav>
</header>